{
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true,
      "optimizer": {
        "simplify": true,
        "jsonify": {
          "minCost": 2048
        }
      }
    },
    "target": "esnext",
    "keepClassNames": true,
    "loose": false,
    "externalHelpers": false,
    "preserveAllComments": true
  },
  "module": {
    "type": "nodenext",
    "strict": true,
    "strictMode": true,
    "lazy": false,
    "importInterop": "swc"
  },
  "sourceMaps": true,
  "inlineSourcesContent": true
}