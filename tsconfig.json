{
  "compilerOptions": {
    "noEmit": false,
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "verbatimModuleSyntax": false,
    "module": "NodeNext",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "strictPropertyInitialization": false,
    "target": "ESNext",
    "strict": true,
    "paths": {
      "#*": ["./src/*/index.ts"],
    },
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
  },
  "exclude": ["node_modules", "./dist"],
}
